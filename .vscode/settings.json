{
  "python.pythonPath": "/Users/seanbugeja/.virtualenvs/msc/bin/python",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.vscode": true,
    "**/__pycache__": true,
    "**/.ipynb_checkpoints": true,
    "**/*.pyc": true,
    "**/*.ipynb": true,
    "**/_ipynbs": true,
    ".python-version": true
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#d8e4f2",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#d787ac",
    "activityBarBadge.foreground": "#15202b",
    "titleBar.activeBackground": "#b1c9e6",
    "titleBar.inactiveBackground": "#b1c9e699",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveForeground": "#15202b99",
    "statusBar.background": "#b1c9e6",
    "statusBarItem.hoverBackground": "#8aaeda",
    "statusBar.foreground": "#15202b"
  },
  // "peacock.color": "#b1c9e6",
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": [
    "--max-line-length=79",
    "--disable=C0330,C0111,import-error,missing-function-docstring,unused-import"
  ],
  "editor.formatOnSave": true,
  "editor.formatOnSaveTimeout": 3000,
  "python.formatting.blackArgs": ["-l 79", "--fast"],
  "python.jediEnabled": false,
  // "python.analysis.downloadChannel": "release",
  "highlight.regexFlags": "gm",
  "highlight.regexes": {
    "([#;].*)": {
      "filterFileRegex": ".*\\.(batch|jobs).txt",
      "decorations": [
        {
          "color": "gray"
          // "fontWeight": "bold"
        }
      ]
    },
    "(default:)\\s": {
      "filterFileRegex": ".*\\.(batch|jobs).txt",
      "decorations": [
        {
          "color": "red"
        }
      ]
    },
    "\\s(-.*?[=\\s])": {
      "filterFileRegex": ".*\\.(batch|jobs).txt",
      "decorations": [
        {
          "color": "yellow"
        }
      ]
    },
    "\\s([a-z_]*=)": {
      "filterFileRegex": ".*\\.(batch|jobs).txt",
      "decorations": [
        {
          "color": "aqua"
        }
      ]
    }
  }
}
